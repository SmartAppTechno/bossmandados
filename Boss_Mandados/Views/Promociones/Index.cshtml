@model IEnumerable<Boss_Mandados.Models.manboss_promociones>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Promociones</h2>
        <p class="btn btn-w-m btn-primary">@Html.ActionLink("Nueva", "Create")</p>
    </div>
</div>

<div class="wrapper-content">
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabla-buscador">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.descripcion)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.descuento)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cupon)
                        </th>
                        <th>
                            Fecha de Inicio
                        </th>
                        <th>
                            Fecha de Fin
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.Raw(item.descripcion)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descuento)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cupon)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fecha_inicio)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.fecha_fin)
                            </td>
                            <td>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Edit", "Promociones", new { id = item.id })"><i class="fa fa-pencil"></i></a></p>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Details", "Promociones", new { id = item.id })"><i class="fa fa-eye"></i></a></p>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Delete", "Promociones", new { id = item.id })"><i class="fa fa-trash"></i></a></p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>