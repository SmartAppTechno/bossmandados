@model Boss_Mandados.Models.manboss_promociones
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Detalles de la Promoción</h2>
    </div>
</div>
<div class="wrapper-content">
    <div class="ibox-content">
        <form role="form" action="" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">Nombre</label>
                <label class="col-sm-10 control-label">@Model.nombre</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Descripción</label>
                <label class="col-sm-10 control-label">@Html.Raw(Model.descripcion)</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Descuento</label>
                <label class="col-sm-10 control-label">@Model.descuento</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Cupón</label>
                <label class="col-sm-10 control-label">@Model.cupon</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Fecha de Inicio</label>
                <label class="col-sm-10 control-label">@Model.fecha_inicio.ToString("dd/MM/yyyy")</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Fecha de Fin</label>
                <label class="col-sm-10 control-label">@Model.fecha_fin.ToString("dd/MM/yyyy")</label>
            </div>
        </form>
    </div>
</div>
<p class="btn btn-w-m btn-primary">@Html.ActionLink("Editar", "Edit", new { id = Model.id })</p>
<p class="btn btn-w-m btn-primary">@Html.ActionLink("Volver", "Index")</p>