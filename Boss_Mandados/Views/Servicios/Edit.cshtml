@model Boss_Mandados.Models.manboss_servicios
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Editar Servicio</h2>
    </div>
</div>
<div class="wrapper-content">
    <div class="ibox-content">
        @using (Html.BeginForm("Edit", "Servicios", new { id = @Model.id }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                <label class="col-sm-2 control-label">Nombre</label>
                <div class="col-sm-10"><input type="text" name="nombre" class="form-control" required value="@Model.nombre"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Tarifa Base Exprés</label>
                <div class="col-sm-10"><input type="number" min="0.00" step=".01" name="tarifa_base_ex" class="form-control" required value="@Model.tarifa_base_ex"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Costo por Minuto Exprés</label>
                <div class="col-sm-10"><input type="number" min="0.00" step=".01" name="costo_minuto_ex" class="form-control" required value="@Model.costo_minuto_ex"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Costo por KM Exprés</label>
                <div class="col-sm-10"><input type="number" min="0.00" step=".01" name="costo_km_ex" class="form-control" required value="@Model.costo_km_ex"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Tarifa Base Compartido (Si no aplica, esribe un cero)</label>
                <div class="col-sm-10"><input type="number" min="0.00" step=".01" name="tarifa_base_co" class="form-control" required value="@Model.tarifa_base_co"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Costo por Minuto Compartido (Si no aplica, esribe un cero)</label>
                <div class="col-sm-10"><input type="number" min="0.00" step=".01" name="costo_minuto_co" class="form-control" required value="@Model.costo_minuto_co"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Costo por KM Compartido (Si no aplica, esribe un cero)</label>
                <div class="col-sm-10"><input type="number" min="0.00" step=".01" name="costo_km_co" class="form-control" required value="@Model.costo_km_co"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Foto</label>
                <div class="col-sm-10">
                    <div class="fileinput fileinput-new input-group" data-provides="fileinput">
                        <div class="form-control" data-trigger="fileinput">
                            <i class="glyphicon glyphicon-file fileinput-exists"></i>
                            <span class="fileinput-filename"></span>
                        </div>
                        <span class="input-group-addon btn btn-default btn-file">
                            <span class="fileinput-new">Seleccionar foto</span>
                            <span class="fileinput-exists">Cambiar</span>
                            <input type="file" accept=".jpg,.jpeg,.png" id="foto"/>
                        </span>
                        <a href="#" class="input-group-addon btn btn-default fileinput-exists" data-dismiss="fileinput">Eliminar</a>
                    </div>
                    <input type="hidden" id="foto_blob" name="foto" value="" />
                </div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                    <button class="btn btn-primary" type="submit">Guardar</button>
                </div>
            </div>
        }
    </div>
</div>
<p class="btn btn-w-m btn-primary">@Html.ActionLink("Volver", "Index")</p>
<script>
    $('#foto').change(function () {
        var fileList = this.files;
        var file = fileList[0];
        create_blob(file, function (blob_string) {
            var data = blob_string.split(',');
            var foto = data[1];
            $("#foto_blob").val(foto);
        });
    });
    function create_blob(file, callback) {
        var reader = new FileReader();
        reader.onload = function () { callback(reader.result) };
        reader.readAsDataURL(file);
    }
</script>