@model IEnumerable<Boss_Mandados.Models.manboss_servicios>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Servicios</h2>
        <p class="btn btn-w-m btn-primary">@Html.ActionLink("Nuevo", "Create")</p>
    </div>
</div>

<div class="wrapper-content">
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabla-buscador">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.nombre)
                        </th>
                        <th>
                            Servicio Exprés
                        </th>
                        <th>
                            Servicio Compartido
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            @if (item.tarifa_base_ex > 0 && item.costo_minuto_ex > 0 && item.costo_km_ex > 0)
                            {
                                <td class="tabla-icono"><i class="fa fa-check-circle fa-2x"></i></td>
                            }
                            else
                            {
                                <td class="tabla-icono"><i class="fa fa-window-close fa-2x"></i></td>
                            }
                            @if (item.tarifa_base_co > 0 && item.costo_minuto_co > 0 && item.costo_km_co > 0)
                            {
                                <td class="tabla-icono"><i class="fa fa-check-circle fa-2x"></i></td>
                            }
                            else
                            {
                                <td class="tabla-icono"><i class="fa fa-window-close fa-2x"></i></td>
                            }
                            <td>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Edit", "Servicios", new { id = item.id })"><i class="fa fa-pencil"></i></a></p>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Details", "Servicios", new { id = item.id })"><i class="fa fa-eye"></i></a></p>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Delete", "Servicios", new { id = item.id })"><i class="fa fa-trash"></i></a></p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>