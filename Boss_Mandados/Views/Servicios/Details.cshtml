@model Boss_Mandados.Models.manboss_servicios
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Detalles del Servicio</h2>
    </div>
</div>
<div class="wrapper-content">
    <div class="ibox-content">
        <form role="form" action="" method="post" class="form-horizontal">
            <div class="form-group centrar">
                <img src="data:image/png;base64,@Model.foto" />
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Nombre</label>
                <label class="col-sm-10 control-label">@Model.nombre</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Tarifa Base Exprés</label>
                <label class="col-sm-10 control-label">@Model.tarifa_base_ex</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Costo por minuto Exprés</label>
                <label class="col-sm-10 control-label">@Model.costo_minuto_ex</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Costo por KM Exprés</label>
                <label class="col-sm-10 control-label">@Model.costo_km_ex</label>
            </div>
            @if (Model.tarifa_base_co > 0 && Model.costo_minuto_co > 0 && Model.costo_km_co > 0)
            {
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Tarifa Base Compartido</label>
                    <label class="col-sm-10 control-label">@Model.tarifa_base_co</label>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Costo por minuto Compartido</label>
                    <label class="col-sm-10 control-label">@Model.costo_minuto_co</label>
                </div>
                <div class="hr-line-dashed"></div>
                <div class="form-group">
                    <label class="col-sm-2 control-label">Costo por KM Compartido</label>
                    <label class="col-sm-10 control-label">@Model.costo_km_co</label>
                </div>
            }
        </form>
    </div>
</div>
<p class="btn btn-w-m btn-primary">@Html.ActionLink("Editar", "Edit", new { id = Model.id })</p>
<p class="btn btn-w-m btn-primary">@Html.ActionLink("Volver", "Index")</p>