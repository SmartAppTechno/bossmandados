@model IEnumerable<Boss_Mandados.Models.manboss_repartidores>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Repartidores</h2>
        <p class="btn btn-w-m btn-primary">@Html.ActionLink("Nuevo", "Create")</p>
    </div>
</div>
<div class="wrapper-content">
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabla-buscador">
                <thead>
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Correo
                        </th>
                        <th>
                            Usuario
                        </th>
                        <th>
                            Rating
                        </th>
                        <th>
                            Efectivo
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.repartidores)
                    {
                        <tr>
                            <td>
                                @item.usuario.nombre
                            </td>
                            <td>
                                @item.usuario.correo
                            </td>
                            <td>
                                @item.usuario.usuario
                            </td>
                            <td>
                                @item.repartidor.rating
                            </td>
                            <td>
                                @item.repartidor.efectivo
                            </td>
                            <td>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Edit", "Repartidores", new { id = item.repartidor.id })"><i class="fa fa-pencil"></i></a></p>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Details", "Repartidores", new { id = item.repartidor.id })"><i class="fa fa-eye"></i></a></p>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Mandados", "Repartidores", new { id = item.repartidor.id })"><i class="fa fa-files-o"></i></a></p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
