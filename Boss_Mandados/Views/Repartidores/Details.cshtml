@model Boss_Mandados.Models.manboss_repartidores
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Detalles del Repartidor</h2>
    </div>
</div>
<div class="wrapper-content">
    <div class="ibox-content">
        <form role="form" action="" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">Nombre</label>
                <label class="col-sm-10 control-label">@ViewBag.item.usuario.nombre</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Correo</label>
                <label class="col-sm-10 control-label">@ViewBag.item.usuario.correo</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Usuario</label>
                <label class="col-sm-10 control-label">@ViewBag.item.usuario.usuario</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Efectivo</label>
                <label class="col-sm-10 control-label">@ViewBag.item.repartidor.efectivo</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Rating</label>
                <label class="col-sm-10 control-label">@ViewBag.item.repartidor.rating</label>
            </div>
        </form>
    </div>
</div>
<p class="btn btn-w-m btn-primary">@Html.ActionLink("Editar", "Edit", new { id = ViewBag.item.repartidor.id })</p>
<p class="btn btn-w-m btn-primary">@Html.ActionLink("Volver", "Index")</p>