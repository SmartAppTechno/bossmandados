@model Boss_Mandados.Models.manboss_repartidores
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Editar Repartidor</h2>
    </div>
</div>
<div class="wrapper-content">
    <div class="ibox-content">
        @using (Html.BeginForm("Edit", "Repartidores", new { id = @Model.id }, FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model => model.id)
            @Html.HiddenFor(model => model.repartidor)
            <div class="form-group">
                <label class="col-sm-2 control-label">Nombre</label>
                <div class="col-sm-10"><input type="text" name="nombre" class="form-control" required value="@ViewBag.usuario.nombre"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Correo</label>
                <div class="col-sm-10"><input type="email" name="correo" class="form-control" pattern="[a-zA-Z0-9.-_]{1,}@("@")[a-zA-Z.-]{2,}[.]{1}[a-zA-Z]{2,}" required value="@ViewBag.usuario.correo"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Usuario</label>
                <div class="col-sm-10"><input type="text" name="usuario" class="form-control" readonly value="@ViewBag.usuario.usuario"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Contraseña</label>
                <div class="col-sm-10"><input type="password" name="contrasenia" class="form-control"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Efectivo</label>
                <div class="col-sm-10"><input type="number" min="0.00" step=".01" name="efectivo" class="form-control" required value="@Model.efectivo"></div>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-2">
                    <button class="btn btn-primary" type="submit">Guardar</button>
                </div>
            </div>
        }
    </div>
</div>
<p class="btn btn-w-m btn-primary">@Html.ActionLink("Volver", "Index")</p>
