@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Mandados del Repartidor</h2>
    </div>
</div>

<div class="wrapper-content">
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabla-buscador">
                <thead>
                    <tr>
                        <th>Estado</th>
                        <th>Fecha</th>
                        <th>Cliente</th>
                        <th>Total</th>
                        <th>Tiempo</th>
                        <th>Detalles</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.mandados)
                    {
                        <tr>
                            <td>
                                @item.estado
                            </td>
                            <td>
                                @item.fecha
                            </td>
                            <td>
                                @item.repartidor
                            </td>
                            <td>
                                @item.total
                            </td>
                            <td>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Mandado", "Clientes", new { id = item.id })"><i class="fa fa-eye"></i></a></p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<p class="btn btn-w-m btn-primary">@Html.ActionLink("Volver", "Index")</p>