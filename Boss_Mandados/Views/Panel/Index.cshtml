@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="wrapper-content">
    <div class="row">
        <div class="col-md-3">
            <div class="widget style1 navy-bg">
                <div class="row">
                    <div class="col-xs-2">
                        <i class="fa fa-users fa-4x"></i>
                    </div>
