<script type="text/javascript" src="https://maps.googleapis.com/maps/api/js?key=AIzaSyC8nWW1F1b2-oI5KXN1ito-gXtABMMthhA"></script>
<script>
    var markers = @Html.Raw(Json.Encode(@ViewBag.mandaderos));
    window.onload = function () {
        var mapOptions = {
            center: new google.maps.LatLng(markers[0].latitud, markers[0].longitud),
            zoom: 8,
            mapTypeId: google.maps.MapTypeId.ROADMAP
        };
        var infoWindow = new google.maps.InfoWindow();
        var map = new google.maps.Map(document.getElementById("mapa_mandados"), mapOptions);
        for (i = 0; i < markers.length; i++) {
            var data = markers[i];
            var myLatlng = new google.maps.LatLng(data.latitud, data.longitud);
            var marker = new google.maps.Marker({
                position: myLatlng,
                map: map,
                title: data.nombre
            });
            (function (marker, data) {
                google.maps.event.addListener(marker, "click", function (e) {
                    infoWindow.setContent(data.nombre);
                    infoWindow.open(map, marker);
                });
            })(marker, data);
        }
    }
    $(document).ready(function () {
        $('a[data-toggle="tab"]').on('shown.bs.tab', function (e) {
            $.fn.dataTable.tables({ visible: true, api: true }).columns.adjust();
        });
    });
</script>