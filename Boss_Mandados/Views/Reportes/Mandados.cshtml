@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Reporte de los Mandados</h2>
    </div>
</div>

<form asp-action="Mandados" method="post" class="formulario_reportes">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="col-sm-5 control-label">Fecha</label>
                <div class="col-sm-7"><input class="form-control fecha" type="text" name="fecha" required></div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="col-sm-5 control-label">Estado</label>
                <div class="col-sm-7">
                    <select class="form-control m-b" name="estado" required>
                        <option value="">Selecciona el estado</option>
                        <option value="1">En espera</option>
                        <option value="2">Asignado</option>
                        <option value="3">En proceso</option>
                        <option value="4">Entregado</option>
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div class="col-sm-12">
                    <button class="btn btn-primary" type="submit">Buscar</button>
                </div>
            </div>
        </div>
    </div>
</form>

@if (ViewBag.total_mandados != null)
{
    <div class="wrapper-content">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="widget style1 navy-bg">
                    <div class="row">
                        <div class="col-xs-2">
                            <i class="fa fa-files-o fa-4x"></i>
                        </div>
                        <div class="col-xs-10 text-right">
                            <span>Total</span>
                            <h2 class="font-bold">$ @ViewBag.total_mandados</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="wrapper-content">
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabla-buscador">
                <thead>
                    <tr>
                        <th>
                            Estado
                        </th>
                        <th>
                            Cliente
                        </th>
                        <th>
                            Repartidor
                        </th>
                        <th>
                            Total
                        </th>
                        <th>
                            Fecha
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.mandados)
                    {
                        <tr>
                            <td>
                                @item.estado
                            </td>
                            <td>
                                @item.cliente
                            </td>
                            <td>
                                @item.repartidor
                            </td>
                            <td>
                                @item.total
                            </td>
                            <td>
                                @item.fecha
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.fecha').datepicker({
            format: 'yyyy-mm-dd',
        });
    });
</script>