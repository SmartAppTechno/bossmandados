@model IEnumerable<Boss_Mandados.Models.manboss_promociones>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Reporte de los Repartidores</h2>
    </div>
</div>

<div class="wrapper-content">
    <div class="row">
        <div class="col-md-6">
            <div class="widget style1 navy-bg">
                <div class="row">
                    <div class="col-xs-2">
                        <i class="fa fa-star-o fa-4x"></i>
                    </div>
                    <div class="col-xs-10 text-right">
                        <span>Rating</span>
                        <h2 class="font-bold">@ViewBag.rating_total</h2>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="widget style1 navy-bg">
                <div class="row">
                    <div class="col-xs-2">
                        <i class="fa fa-dollar fa-4x"></i>
                    </div>
                    <div class="col-xs-10 text-right">
                        <span>Efectivo</span>
                        <h2 class="font-bold">@ViewBag.efectivo_total</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="wrapper-content">
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabla-buscador">
                <thead>
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Rating
                        </th>
                        <th>
                            Efectivo
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.repartidores)
                    {
                        <tr>
                            <td>
                                @item.nombre
                            </td>
                            <td>
                                @item.rating
                            </td>
                            <td>
                                @item.efectivo
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>