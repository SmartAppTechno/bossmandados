@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Reporte de las Comisiones</h2>
    </div>
</div>

<form asp-action="Mandados" method="post" class="formulario_reportes">
    <div class="row">
        <div class="col-md-3">
            <div class="form-group">
                <label class="col-sm-5 control-label">Fecha de Inicio</label>
                <div class="col-sm-7"><input class="form-control fecha_inicio" type="text" name="fecha_inicio" required></div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="col-sm-5 control-label">Fecha de Fin</label>
                <div class="col-sm-7"><input class="form-control fecha_fin" type="text" name="fecha_fin" required></div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <label class="col-sm-5 control-label">Repartidor</label>
                <div class="col-sm-7">
                    <select class="form-control m-b" name="repartidor">
                        <option value="">Selecciona el Repartidor</option>
                        @foreach (var item in ViewBag.repartidores)
                        {
                            <option value="@item.id">@item.nombre</option>
                        }
                    </select>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="form-group">
                <div class="col-sm-12">
                    <button class="btn btn-primary" type="submit">Buscar</button>
                </div>
            </div>
        </div>
    </div>
</form>

@if (ViewBag.pagar != null && ViewBag.deben != null)
{
    <div class="wrapper-content">
        <div class="row">
            <div class="col-md-6">
                <div class="widget style1 navy-bg">
                    <div class="row">
                        <div class="col-xs-2">
                            <i class="fa fa-dollar fa-4x"></i>
                        </div>
                        <div class="col-xs-10 text-right">
                            <span>Total a pagar</span>
                            <h2 class="font-bold">$ @ViewBag.pagar</h2>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="widget style1 navy-bg">
                    <div class="row">
                        <div class="col-xs-2">
                            <i class="fa fa-dollar fa-4x"></i>
                        </div>
                        <div class="col-xs-10 text-right">
                            <span>Total que deben</span>
                            <h2 class="font-bold">$ @ViewBag.deben</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="wrapper-content">
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabla-buscador">
                <thead>
                    <tr>
                        <th>
                            Repartidor
                        </th>
                        <th>
                            Fecha
                        </th>
                        <th>
                            Total
                        </th>
                        <th>
                            Comisión
                        </th>
                        <th>
                            Tipo de Pago
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.comisiones)
                    {
                        <tr>
                            <td>
                                @item.repartidor
                            </td>
                            <td>
                                @item.fecha
                            </td>
                            <td>
                                @item.total
                            </td>
                            <td>
                                @item.comision
                            </td>
                            <td>
                                @item.tipo_pago
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.fecha_inicio').datepicker({
            format: 'yyyy-mm-dd',
        });
        $('.fecha_fin').datepicker({
            format: 'yyyy-mm-dd',
        });
    });
</script>