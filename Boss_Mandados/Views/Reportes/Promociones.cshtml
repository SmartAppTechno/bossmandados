@model IEnumerable<Boss_Mandados.Models.manboss_promociones>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Reporte de las Promociones</h2>
    </div>
</div>

<form asp-action="Promociones" method="get">
    <div class="form-group">
        <label class="col-sm-2 control-label">Fecha de Inicio</label>
        <div class="col-sm-10"><input class="form-control fecha_inicio" type="text" name="fecha_inicio" required></div>
    </div>
    <div class="hr-line-dashed"></div>
    <div class="form-group">
        <label class="col-sm-2 control-label">Fecha de Fin</label>
        <div class="col-sm-10"><input class="form-control fecha_fin" type="text" name="fecha_fin" required></div>
    </div>
    <div class="hr-line-dashed"></div>
    <div class="form-group">
        <div class="col-sm-4 col-sm-offset-2">
            <button class="btn btn-primary" type="submit">Buscar</button>
        </div>
    </div>
</form>

<p>Estado: @ViewBag.estado</p>

<div class="wrapper-content">
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabla-buscador">
                <thead>
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Descripción
                        </th>
                        <th>
                            Fecha de Inicio
                        </th>
                        <th>
                            Fecha de Fin
                        </th>
                        <th>
                            No. de veces utilizado
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.promociones)
                    {
                        <tr>
                            <td>
                                @item.nombre
                            </td>
                            <td>
                                @item.descripcion
                            </td>
                            <td>
                                @item.fecha_inicio
                            </td>
                            <td>
                                @item.fecha_fin
                            </td>
                            <td>
                                @item.veces
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
$(document).ready(function(){
    $('.fecha_inicio').datepicker({
        format: 'yyyy-mm-dd',
    });
    $('.fecha_fin').datepicker({
        format: 'yyyy-mm-dd',
    });
});
</script>