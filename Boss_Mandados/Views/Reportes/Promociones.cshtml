@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Reporte de las Promociones</h2>
    </div>
</div>

<form asp-action="Promociones" method="post" class="formulario_reportes">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label class="col-sm-5 control-label">Fecha de Inicio</label>
                <div class="col-sm-7"><input class="form-control fecha_inicio" type="text" name="fecha_inicio" required></div>
            </div>
         </div>
        <div class="col-md-4">
            <div class="form-group">
                <label class="col-sm-5 control-label">Fecha de Fin</label>
                <div class="col-sm-7"><input class="form-control fecha_fin" type="text" name="fecha_fin" required></div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <div class="col-sm-12">
                    <button class="btn btn-primary" type="submit">Buscar</button>
                </div>
            </div>
        </div>
    </div>
</form>

@if (ViewBag.total_promociones != null)
{
    <div class="wrapper-content">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="widget style1 navy-bg">
                    <div class="row">
                        <div class="col-xs-2">
                            <i class="fa fa-files-o fa-4x"></i>
                        </div>
                        <div class="col-xs-10 text-right">
                            <span>No. de veces que se utilizaron las promociones</span>
                            <h2 class="font-bold">@ViewBag.total_promociones</h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

<div class="wrapper-content">
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabla-buscador">
                <thead>
                    <tr>
                        <th>
                            Nombre
                        </th>
                        <th>
                            Descripción
                        </th>
                        <th>
                            Fecha de Inicio
                        </th>
                        <th>
                            Fecha de Fin
                        </th>
                        <th>
                            No. de veces utilizado
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.promociones)
                    {
                        <tr>
                            <td>
                                @item.nombre
                            </td>
                            <td>
                                @item.descripcion
                            </td>
                            <td>
                                @item.fecha_inicio
                            </td>
                            <td>
                                @item.fecha_fin
                            </td>
                            <td>
                                @item.veces
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        $('.fecha_inicio').datepicker({
            format: 'yyyy-mm-dd',
        });
        $('.fecha_fin').datepicker({
            format: 'yyyy-mm-dd',
        });
    });
</script>