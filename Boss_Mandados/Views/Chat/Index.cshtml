@model IEnumerable<Boss_Mandados.Models.manboss_chat>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Chat</h2>
    </div>
</div>
<div class="wrapper-content">
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabla-buscador">
                <thead>
                    <tr>
                        <th>
                            Fecha
                        </th>
                        <th>
                            Cliente
                        </th>
                        <th>
                            Repartidor
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in ViewBag.conversaciones)
                    {
                        <tr>
                            <td>
                                @item.fecha
                            </td>
                            <td>
                                @item.cliente
                            </td>
                            <td>
                                @item.repartidor
                            </td>
                            <td>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Details", "Chat", new { id = item.id })"><i class="fa fa-eye"></i></a></p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
