@model Boss_Mandados.Models.manboss_usuarios
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Detalles del Administrador</h2>
    </div>
</div>
<div class="wrapper-content">
    <div class="ibox-content">
        <form role="form" action="" method="post" class="form-horizontal">
            <div class="form-group">
                <label class="col-sm-2 control-label">Nombre</label>
                <label class="col-sm-10 control-label">@Model.nombre</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Correo</label>
                <label class="col-sm-10 control-label">@Model.correo</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Usuario</label>
                <label class="col-sm-10 control-label">@Model.usuario</label>
            </div>
            <div class="hr-line-dashed"></div>
            <div class="form-group">
                <label class="col-sm-2 control-label">Permisos</label>
                <div class="col-sm-10">
                    @foreach (var item in ViewBag.menus)
                    {
                        if (ViewBag.permisos.Contains(item.id))
                        {
                            <div class="i-checks"><label><input type="checkbox" name="permisos[]" disabled="disabled" checked="" value="@item.id"><i></i> @item.nombre</label></div>
                        }
                        else
                        {
                            <div class="i-checks"><label><input type="checkbox" name="permisos[]" disabled="disabled" value="@item.id"><i></i> @item.nombre</label></div>
                        }
                    }
                </div>
            </div>
        </form>
    </div>
</div>
<p class="btn btn-w-m btn-primary">@Html.ActionLink("Editar", "Edit", new { id = Model.id })</p>
<p class="btn btn-w-m btn-primary">@Html.ActionLink("Volver", "Index")</p>