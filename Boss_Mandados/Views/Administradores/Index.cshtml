@model IEnumerable<Boss_Mandados.Models.manboss_usuarios>

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Administradores</h2>
        <p class="btn btn-w-m btn-primary">@Html.ActionLink("Nuevo", "Create")</p>
    </div>
</div>

<div class="wrapper-content">
    <div class="ibox-content">
        <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover tabla-buscador">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.nombre)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.correo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.usuario)
                        </th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.nombre)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.correo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.usuario)
                            </td>
                            <td>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Edit", "Administradores", new { id = item.id })"><i class="fa fa-pencil"></i></a></p>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Details", "Administradores", new { id = item.id })"><i class="fa fa-eye"></i></a></p>
                                <p class="btn btn-w-m btn-primary"><a href="@Url.Action("Delete", "Administradores", new { id = item.id })"><i class="fa fa-trash"></i></a></p>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>